{
  "extends": "next/core-web-vitals",
  "rules": {
    // Disable rules that slow down builds
    "react-hooks/exhaustive-deps": "warn",
    "@next/next/no-img-element": "warn",
    "react/no-unescaped-entities": "off",
    
    // Performance optimizations
    "no-unused-vars": "off",
    "no-console": "off",
    
    // Disable some rules that are not critical for production builds
    "prefer-const": "off",
    "no-var": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "build/",
    "dist/"
  ]
}
