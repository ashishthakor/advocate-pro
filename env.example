# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=legal_case_management
DB_USER=root
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# S3 Bucket
# Format: "bucketname/path/" (e.g., "arbitalk/dev/" for dev, "arbitalk/prod/" for prod)
# The bucket name is extracted (first part), and the path prefix is used for file organization
# Notices will be stored at: {path}/notices/{filename}
AWS_S3_BUCKET_NAME=arbitalk/dev/
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email (SendGrid)
SENDGRID_API_KEY=
# SendGrid From Email (must be verified in SendGrid)
SENDGRID_FROM_EMAIL=noreply@arbitalk.com
# SendGrid From Name (optional)
SENDGRID_FROM_NAME=Arbitalk
# Where contact emails should be delivered
CONTACT_TO_EMAIL=

# Email (Resend) - Legacy, kept for contact form
RESEND_API_KEY=
# Optional: the verified domain for your Resend emails (used in From address)
RESEND_DOMAIN=

# Socket.io Configuration
SOCKET_IO_PORT=3001
# Public Socket.io URL (for client-side connections)
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# Razorpay Payment Gateway Configuration
# Get these from Razorpay Dashboard: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_key_secret_here
# Webhook secret from Razorpay Dashboard → Settings → Webhooks (after creating webhook)
# For local testing, use ngrok to expose localhost (see docs/RAZORPAY_SETUP.md)
RAZORPAY_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain,application/rtf

# Meta Pixel (Facebook Pixel) Configuration
# Get your Pixel ID from Meta Events Manager: https://business.facebook.com/events_manager2
# Format: 15-16 digit number (e.g., 123456789012345)
NEXT_PUBLIC_META_PIXEL_ID=123456789012345